<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:id="@+id/ingredient_search_type"
        android:entries="@array/ingredient_search_types" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:id="@+id/ingredient_search"
        android:entries="@array/search_recipe_ingredient_list"
        android:layout_weight="6" />

    <Button
        android:drawable="@android:drawable/ic_menu_close_clear_cancel"
        android:layout_width="30dp"
        android:id="@+id/removeIngredient"
        android:layout_height="30dp"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="5dp"
        style="@style/Widget.AppCompat.Button"
        android:background="@android:drawable/ic_menu_close_clear_cancel" />

</LinearLayout>
